{
  "name": "ai-toolkit",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "tsc --build --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --reporter=verbose packages/*/src/**/*.test.ts",
    "test:integration": "vitest run --reporter=verbose test/integration/**/*.test.ts",
    "test:e2e": "vitest run --reporter=verbose test/e2e/**/*.test.ts",
    "test:performance": "vitest run --reporter=verbose test/performance/**/*.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:ai-quality": "vitest run --reporter=verbose test/ai-quality/**/*.test.ts",
    "lint": "eslint packages/*/src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts test/**/*.ts --fix",
    "format": "prettier --write packages/*/src/**/*.ts test/**/*.ts",
    "format:check": "prettier --check packages/*/src/**/*.ts test/**/*.ts",
    "quality:check": "npm run lint && npm run format:check && npm run test:coverage",
    "quality:fix": "npm run lint:fix && npm run format",
    "check-integrity": "npm run --workspace=@ai-toolkit/api-server check-integrity",
    "sonar": "sonar-scanner",
    "start": "npm run --workspace=@ai-toolkit/api-server start",
    "start:dev": "npm run --workspace=@ai-toolkit/api-server start -- --env=development",
    "start:prod": "npm run --workspace=@ai-toolkit/api-server start -- --env=production",
    "dev": "npm run --workspace=@ai-toolkit/api-server dev",
    "env:check": "node -e \"console.log('Environment:', process.env.NODE_ENV || 'development')\"",
    "env:switch": "node scripts/switch-env.js",
    "readiness-check": "node scripts/system-readiness-check.js",
    "readiness-check:prod": "node scripts/system-readiness-check.js --env=production",
    "readiness-check:server": "node scripts/system-readiness-check.js --check-server",
    "pre-deploy": "npm run readiness-check:prod && npm run build && npm run test"
  },
  "dependencies": {
    "cheerio": "^1.1.0",
    "dotenv": "^16.0.0",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.34.3",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/semver": "^7.7.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "jest": "^29.0.0",
    "msw": "^2.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "sonarjs": "^1.0.0",
    "supertest": "^6.3.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
