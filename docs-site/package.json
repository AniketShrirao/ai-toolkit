{
  "name": "docs-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 9899",
    "build": "next build",
    "build:with-validation": "npm run validate:content && next build",
    "export": "next build && next export",
    "start": "next start --port 9898",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "build:static": "next build",
    "serve": "npx serve@latest out",
    "clean": "rm -rf .next out",
    "validate:content": "node scripts/validate-content.js",
    "validate:content:verbose": "node scripts/validate-content.js --verbose",
    "validate:content:ts": "tsx scripts/validate-content.ts",
    "validate:content:ts:verbose": "tsx scripts/validate-content.ts --verbose"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.4.5",
    "@types/mdx": "^2.0.13",
    "gray-matter": "^4.0.3",
    "next": "15.4.5",
    "next-mdx-remote": "^5.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-toc": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "sass": "^1.89.2",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
