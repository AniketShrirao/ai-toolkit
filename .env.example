# AI Toolkit Environment Configuration
# Copy this file to .env and adjust values as needed

NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Ollama Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_TIMEOUT=30000
OLLAMA_DEFAULT_MODEL=llama2:7b

# Database Configuration
DATABASE_PATH=./data/ai-toolkit-dev.db
DATABASE_LOGGING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_KEY_PREFIX=ai-toolkit:dev:

# Storage Configuration
STORAGE_INPUT_PATH=./data/input
STORAGE_OUTPUT_PATH=./data/output
STORAGE_TEMP_PATH=./temp
STORAGE_MAX_FILE_SIZE=100MB

# Processing Configuration
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=300000
RETRY_ATTEMPTS=2

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/ai-toolkit.log
LOG_CONSOLE_ENABLED=true

# Security Configuration
RATE_LIMITING_ENABLED=true
RATE_LIMITING_WINDOW_MS=900000
RATE_LIMITING_MAX=100

# Features Configuration
WEB_DASHBOARD_ENABLED=true
API_DOCUMENTATION_ENABLED=true
HEALTH_CHECKS_ENABLED=true
METRICS_ENABLED=true